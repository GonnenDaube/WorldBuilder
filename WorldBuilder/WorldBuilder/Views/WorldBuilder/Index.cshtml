@{
    ViewData["Title"] = "New World";
    
}

<content class="col-md-12 col-lg-12 margin-top-30" style="height:641px; border:solid 1px gray; clip-path: inset(0 0 0 0)">
    <div id="background" class="full-size">
        <div class="layer layer0 full-size" style="z-index:0">
            <div id="layer0" class="full-size" style=""></div>
        </div>
        <div class="layer layer1 full-size" style="z-index:1">
            <div id="layer1" class="full-size" style=""></div>
        </div>
        <div class="layer layer2 full-size" style="z-index:2">
            <div id="layer2" class="full-size" style=""></div>
        </div>
        <div class="layer layer3 full-size" style="z-index:3">
            <div id="layer3" class="full-size" style=""></div>
        </div>
        <div class="layer layer4 full-size" style="z-index:4">
            <div id="layer4" class="full-size" style=""></div>
        </div>
        <div class="layer layer5 full-size" style="z-index:5">
            <div id="layer5" class="full-size" style=""></div>
        </div>
    </div>
    <div id="handles" class="full-size" style="z-index:7"></div>
    <div id="sprite-editor-zone" class="full-size" style="z-index:6">
    </div>
</content>

<div class="col-md-12 col-lg-12 margin-top-30 margin-bottom-30 scroll-bar">
    <div class="scroll-handle"></div>
</div>

<aside style="z-index:100">
    <div class="col-lg-12 col-md-12 margin-top-100 font-18 light text-center">
        <label>World Name:</label>
    </div>
    <div class="col-lg-12 col-md-12 margin-top-30 font-18 light text-center">
        <input class="text-field dark" type="text" data-role="world-name" value="New_World" />
    </div>
    <div class="col-lg-12 col-md-12 margin-top-30 font-18 light text-center">
        <label>Select layer to edit:</label>
    </div>
    <div class="slider col-md-10 col-lg-10 horizontal-center">
        <div class="bar"></div>
        <div class="handle" style="left:0%"></div>
        <input type="range" min="0" max="5" class="hidden" />
    </div>
    <div class="col-lg-12 col-md-12 margin-top-30 font-18 light text-center">
        <label>Select layer color:</label>
    </div>
    <div class="layer-color col-md-12 col-lg-12 margin-top-10 horizontal-center">
        <div class="color pos-absolute horizontal-center">
        </div>
    </div>
    <div class="col-lg-12 col-md-12 margin-top-100 font-18 light text-center">
        <label>Add sprites to layer:</label>
    </div>
    <div class="sprite-info-selector col-md-12 col-lg-12 margin-top-10 horizontal-center">
        <i class="col-lg-12 col-md-12 far fa-images text-center light font-50 pointer"></i>
    </div>

    <div class="col-lg-12 col-md-12 margin-top-30 font-18 light text-center">
        <label>Add portals to layer:</label>
    </div>
    <div class="portal-manager col-md-12 col-lg-12 margin-top-10 horizontal-center">
        <i class="portal-highlighter col-lg-6 col-md-6 fas fa-hiking text-center light font-50 pointer"></i>
        <i class="portal-adder col-lg-6 col-md-6 text-center light font-50 pointer fas fa-plus"></i>
    </div>
    <div class="portal-editor col-md-12 col-lg-12 margin-top-10 horizontal-center light">
        <label class="col-lg-12 col-md-12">Portal Name:</label>
        <input class="text-field dark col-md-12 col-lg-12" type="text" data-role="portal-name" value="New_Portal" />
        <label class="col-lg-6 col-md-6 margin-top-15">Link to portal:</label>
        <div class="slideOne col-lg-6 col-md-6" data-role="isLink">
            <input type="checkbox" value="None" id="slideOne" name="check" />
            <label for="slideOne"></label>
        </div>
    </div>

    <div class="col-lg-12 col-md-12 bottom-30 margin-bottom-30 pos-absolute">
        <button class="btn-default primary horizontal-center pos-absolute" data-target="submit-world">Upload</button>
    </div>
</aside>

<aside id="color-selector" class="closed small" data-role="sidebar" style="z-index:99;">
    <div data-target="colors" class="server-color col-lg-12 col-md-12 margin-top-100 horizontal-center">

    </div>
</aside>

<aside id="sprite-selector" class="closed small" data-role="sidebar" style="z-index:98;">
    <div data-target="images" class="server-image col-lg-12 col-md-12 margin-top-100 horizontal-center">

    </div>
</aside>

<aside class="link-selector light right" style="z-index:100; display:none;">
    <label class="col-lg-12 col-md-12 margin-top-100">Select portal to link to:</label>
    <label class="col-lg-12 col-md-12 margin-top-30">World name:</label>
    <div class="col-lg-12 col-md-12 search" data-target="#world-target">
        <input tabindex="0" type="text" class="text-field col-lg-12 col-md-12 margin-top-10 dark" />
        <div class="search-result-group col-lg-12 col-md-12">
        </div>
    </div>
    <label class="col-lg-12 col-md-12 margin-top-30">Portal name:</label>
    <div class="col-lg-12 col-md-12 search" data-target="#portal-target">
        <input tabindex="0" type="text" class="text-field col-lg-12 col-md-12 margin-top-10 dark" />
        <div class="search-result-group col-lg-12 col-md-12">
        </div>
    </div>
    <select class="hidden" id="world-target" style="display:none"></select>
    <select class="hidden" id="portal-target" style="display:none"></select>
</aside>

