
@{
    ViewData["Title"] = "New World";
}

<content class="col-md-12 col-lg-12 margin-top-30" style="height:800px; border:solid 1px gray">
    <div id="background" class="full-size">
        <div id="layer0" class="full-size" style=""></div>
        <div id="layer1" class="full-size" style=""></div>
        <div id="layer2" class="full-size" style=""></div>
        <div id="layer3" class="full-size" style=""></div>
        <div id="layer4" class="full-size" style=""></div>
    </div>
    <div id="handles" class="full-size">

        @for (int j = 0; j < 5; j++)
            {
                for (int i = 0; i < 11; i++)
                {
                    <div class="handle layer@(j)"></div>
                }
            }
    </div>
</content>

<aside>
    <div class="slider col-md-10 col-lg-10 margin-top-100 horizontal-center">
        <div class="bar"></div>
        <div class="handle" style="left:0%"></div>
        <input type="range" min="0" max="4" class="hidden"/>
    </div>
</aside>

